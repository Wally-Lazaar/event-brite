<!DOCTYPE html>
<html>
  <head>
    <title>TestActionMailer</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">


    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <nav class="navbar navbar-expand-lg navbar-light bg-light">
  <div class="container-fluid">
    <a class="navbar-brand" href="#">Party/Now</a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto mb-2 mb-lg-0 ">
        <% if user_signed_in? %>
        <li class="nav-item mr-2 mt-2 ">
           <%= link_to "Home", root_path %>
        </li>
        <li class="nav-item mr-2 mt-2 ml-3">
           <%= link_to "Creer un evenement", new_event_path %>
        </li>
        <li class="nav-item mr-2 mt-2 ml-3">
           <%= link_to "Mon profil", user_show_path %>
        </li>
        <li class="nav-item mr-2 mt-2 ml-3">
           <%= link_to "Se deconnecter", destroy_user_session_path , :method => :delete%>
        </li>

        <% else %>

        <li class="nav-item mr-2 mt-2 ">
           <%= link_to "Home", root_path %>
        </li>
        <li class="nav-item mr-5 mt-2 ml-3">
           <%= link_to "Login", new_user_session_path %>
        </li>
        <li class="nav-item mr-5 mt-2 ml-3">
           <%= link_to "Register", new_user_registration_path %>
        </li>
        <% end %>

      </ul>

    </div>
  </div>
</nav>
<%= yield %>
  </body>
</html>
