

<div class="ml-5">

</div>
<div class="card text-center ml-2">
<div class="card-header">
<h1>EVENT !</h1>
</div>
<div class="card-body">
<h5 class="card-title">Event n° <%= @id %></h5>
<p class="card-text"><%= @events.title %></p>
<p class="card-text"><%= @events.description %></p>
<%= button_to 'Delete event', @events, method: :delete, data: { confirm: 'Are you sure?' } %>

<%= form_tag orders_path do %>
<article>
  <% if flash[:error].present? %>
    <div id="error_explanation">
      <p><%= flash[:error] %></p>
    </div>
  <% end %>
  <label class="amount">
    <span>Amount: <%=@events.price%>€</span>
  </label>
</article><script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
    data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
    data-description="Achat d'un produit"
    data-amount="500"
    data-locale="auto">
</script>
<% end %>


</div>
<div class="card-footer text-muted">
2 days ago
</div>
</div>
